@model Student

<table class="table">
    <tr>
        <td width="200">ID</td><td>@Model.ID</td>
    </tr>
    <tr>
        <td width="200">Name</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td width="200">Surname</td>
        <td>@Model.Surname</td>
    </tr>
    <tr>
        <td width="200">Birth Date</td>
        <td>@Model.BirthDate.ToLongDateString()</td>
    </tr>
</table>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this student?');">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>